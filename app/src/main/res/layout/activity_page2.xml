<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#553434"
    tools:context=".page_2">

    <TextView
        android:id="@+id/displaytext"
        android:layout_width="363dp"
        android:layout_height="137dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="297dp"
        android:text="It's time for the panda's routine (eat, play, bath)"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kung_fu_panda_image2"
        android:layout_width="408dp"
        android:layout_height="277dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="454dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kung_fu_panda_cover_page" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="107dp"
        android:layout_height="66dp"
        android:layout_marginTop="609dp"
        android:layout_marginBottom="56dp"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bathbutton"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eatbutton"
        android:layout_width="121dp"
        android:layout_height="75dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="180dp"
        android:text="Eat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bathbutton"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="56dp"
        android:text="Bath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/eatProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="97dp"
        android:layout_height="17dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="154dp"
        android:progressBackgroundTint="#F3EBEB"
        android:progressTint="#1A2FCA"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/bathProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="87dp"
        android:layout_height="19dp"
        android:layout_marginTop="701dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="11dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#1A2FCA"
        android:rotation="-180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/playProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="18dp"
        android:layout_marginTop="702dp"
        android:layout_marginBottom="11dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#1A2FCA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bathProgressBar"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>